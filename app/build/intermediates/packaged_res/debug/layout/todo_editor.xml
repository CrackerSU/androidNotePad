<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText android:id="@+id/title"
        android:autofillHints="username"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/todo_title_hint"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText android:id="@+id/description"
        android:autofillHints="username"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/todo_description_hint"
        android:gravity="top"
        android:inputType="textMultiLine"/>

    <CheckBox android:id="@+id/completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/todo_completed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/due_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="@string/no_due_date"/>

        <Button android:id="@+id/pick_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_date"/>

    </LinearLayout>

</LinearLayout>
